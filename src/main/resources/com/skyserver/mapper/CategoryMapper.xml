<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.skyserver.mapper.CategoryMapper">

    <insert id="insert">
        insert into category (type, name, sort, status, create_time, update_time, create_user, update_user)
        values (#{type}, #{name}, #{sort}, #{status}, #{createTime}, #{updateTime}, #{createUser}, #{updateUser});
    </insert>

    <!--   动态sql-->
    <update id="update">
        update category
        <set>
            <if test="type!=null">
                type=#{type},
            </if>
            <if test="name!=null and name!=''">
                name=#{name},
            </if>
            <if test="sort!=null">
                sort=#{sort},
            </if>
            <if test="status!=null">
                status=#{status},
            </if>
            <if test="createTime!=null">
                create_time=#{createTime},
            </if>
            <if test="updateTime!=null">
                update_time=#{updateTime},
            </if>
            <if test="createUser!=null">
                create_user=#{createUser},
            </if>
            <if test="updateUser!=null">
                update_user=#{updateUser}
            </if>
            where id =#{id}
        </set>
    </update>

    <delete id="delete">
        delete
        from category
        where id = #{categoryId};
    </delete>

    <select id="list" resultType="com.skypojo.entity.Category">
        select * from category
        <where>
            <if test="name !=null and name !=''">
                name like concat('%',#{name},'%')
            </if>
            <if test="type !=null">
                and type = #{type}
            </if>
        </where>
        order by sort asc,update_time desc
    </select>

    <select id="selectByType" resultType="com.skypojo.entity.Category">
        select *
        from category
        where type = #{type};
    </select>
    <select id="listAll" resultType="com.skypojo.entity.Category">
        select *
        from category
        where status = 1;
    </select>

    <select id="getById" resultType="com.skypojo.entity.Category">
        select *
        from category
        where id = #{categoryId}
    </select>


</mapper>